<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp"
    tools:context=".entertainment.RandomHighestMountains">

    <ImageView
        android:id="@+id/iv_home"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_gravity="center"
        android:contentDescription="@string/mega_logo"
        android:src="@drawable/megalogo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"
        android:text="@string/welcome_to_random_highest_mountains_app_you_can_click_to_generate_random_names_of_mountains"
        android:textColor="#686868"
        android:textSize="@dimen/_15sdp" />


    <TextView
        android:id="@+id/tv_randomMountains"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_80sdp"
        android:gravity="center"
        android:text="@string/here_random_mountains_will_appear"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_generateRandomHighestMountains"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_100sdp"
        android:background="@drawable/button_design"
        android:text="@string/generate_random_name"
        android:textColor="@color/white"
        android:textStyle="bold" />

</LinearLayout>